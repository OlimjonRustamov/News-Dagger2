<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="256dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:foreground="?selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:layout_marginTop="4dp"
    android:layout_marginRight="16dp"
    android:layout_marginBottom="16dp"
    android:backgroundTint="?attr/appBackground"
    android:background="@drawable/home_category_bg"
    android:layout_height="256dp">

    <ImageView
        android:drawingCacheQuality="low"
        android:scaleType="centerCrop"
        android:src="@drawable/home_news"
        android:id="@+id/home_news_image"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="256dp"
        android:layout_height="256dp" />

    <TextView
        android:id="@+id/news_title"
        android:layout_marginBottom="16dp"
        android:paddingLeft="16dp"
        android:textSize="18sp"
        android:maxLines="2"
        android:textStyle="bold"
        android:paddingRight="16dp"
        android:text="@string/appbar_scrolling_view_behavior"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/news_category"
        android:paddingLeft="16dp"
        android:textSize="12sp"
        android:maxLines="1"
        android:paddingRight="16dp"
        android:text="@string/category_politics"
        app:layout_constraintBottom_toTopOf="@id/news_title"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textColor="#cccccc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/home_news_bookmark_image"
        android:src="@drawable/ic_bookmark_unselected"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginTop="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:tint="@color/white" />

</androidx.constraintlayout.widget.ConstraintLayout>